<%- include('../includes/head.ejs') %>

    <div class="has-background-light box">
        <div class="box">
            <% if (info.length > 0) { %>
                <% for (let elements of info) { %>
                    <article class="media">

                        <div class="media-content">
                            <strong><%= elements.Nombre%> <%= elements.PA%> <%= elements.SA%></strong>

                            <br>
                            <%= elements.contenido%>
                                </br>
                                <% if (logged == true) { %>
                                    <form action="/resenas/delete" method="post">
                                        <input type="hidden" name="idComentario" value="<%= elements.idComentario %>">
                                        <input type="hidden" name="idUsuario" value="<%= elements.idUsuario %>">

                                        <input class="button has-text-centered is-danger" type="submit" id="eliminar" name="eliminar" value="Eliminar">
                                    </form>
                                    <% } %>
                                        <small><a><%= elements.fecha%></a></small>

                        </div>
                    </article>
                    <% } %>

                        <% } else { %>
                            <h1>El arreglo está vacío</h1>
                            <% } %>
                                <% if (logged == true) { %>
                                    <form action="/resenas" method="post">
                                        <article class="media">
                                            <div class="media-content">
                                                <div class="field">
                                                    <p class="control">
                                                        <input class="input" type="text" id="resena_cont" name="contenido" onkeyup="cambiarcolor(this) " maxlength="255" placeholder="Añade un comentario...">
                                                    </p>
                                                </div>
                                                <div class="field">
                                                    <p class="control">
                                                        <input class="button has-text-centered is-danger" type="submit" id="enviar" name="enviar" value="Publicar">
                                                    </p>
                                                </div>
                                            </div>
                                        </article>
                                    </form>
                                    <% } %>

        </div>
    </div>
    <% if(info != '') { %>
        <script>
            bulmaToast.toast({
                message: '<%= info %>',
                type: 'is-danger',
                position: 'bottom-right',
                animate: { in: 'fadeIn',
                    out: 'fadeOut'
                }
            })
        </script>
        <% } %>

            <%- include('../includes/foot.ejs') %>