<a href="/propiedades/<%=propiedad.IdPropiedad%>">
<div class="card shadow-lg is-cursor-pointer">
    <div class="card-image cover-image is-overflow-hidden">
        <figure class="image is-4by3">
          <img src="../uploads/<%=propiedad.Imagenes%>">
        </figure>
      </div>
    <div class="card-content">
      <p class="subtitle">
        <%= propiedad.Titulo %> 
      </p>
      <p class="is-size-6	">
          <span class="is-size-6	"><%=propiedad.Municipio%>, <%=propiedad.Colonia%></span>
      </p>

      <%= Intl.NumberFormat('es-MX',{style:'currency',currency:'MXN',minimumFractionDigits:0,maximumFractionDigits:0}).format(propiedad.Precio) %> 
    </div>
    <footer class="card-footer">
        <p class="card-footer-item is-small">
          <span>
            <span class="icon-text">
              <span class="icon">
                <i class="mdi mdi-floor-plan"></i>
              </span>
              <span><%=propiedad.MConstruccion%></span>
            </span>
          </span>
        </p>
    </footer>
  </div>
</a>
