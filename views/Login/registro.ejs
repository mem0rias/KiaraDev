<%- include('../includes/head.ejs') %>
<br>   
<br>    
<section class="px-5">
<div class="columns">
        <div class="column is-4"></div>
        <div class="has-background-light column is-4 box">
            <div id="title" class="has-text-centered box has-background-white">
                <h1 class="is-size-1"> Registro de usuario </h1>
            </div>
            
            <br>
            <div>
                <style>
                    .iti {width: 100%;}
                </style>
                <h2 id="mensaje" class="has-text-danger"></h2>
                <form action="/login/registrarse" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <h2> Nombre(s)</h2>
                    <h2 class="has-text-danger"> *</h2>
                    <input class="input" type="text" id="campo-1" name="el1" onkeyup="cambiarcolor(this)" maxlength="255">
                    <br><br>
                    <h2> Primer Apellido </h2>
                    <h2 class="has-text-danger"> *</h2>
                    <input class="input" type="text" id="campo-2" name="el1" onkeyup="cambiarcolor(this) " maxlength="255">
                    <br><br>
                    <h2> Segundo Apellido </h2>
                    <h2 class="has-text-danger"> *</h2>
                    <input class="input" type="text" id="campo-3" name="el1" onkeyup="cambiarcolor(this)" maxlength="255">
                    <br><br>
                    <h2 id="correo" class="has-text-danger"></h2>
                    <h2> Correo Electronico </h2>
                    <h2 class="has-text-danger"> *</h2>
                    <input class="input" type="text" id="campo-4" name="el1" onkeyup="cambiarcolor(this); correovalido(this)" maxlength="255">
                    <br><br>
                    <h2> Estado Civil</h2>
                    <h2 class="has-text-danger"> *</h2>
                    <select class="input" name="el1" id="el1">
                        <option value="Soltero"> Soltero</option>
                        <option value="Casado"> Casado</option>
                    </select>
                    <br><br>
                    <h2> Ocupacion </h2>
                    <h2 class="has-text-danger"> *</h2>
                    <input class="input" type="text" id="campo-5" name="el1" onkeyup="cambiarcolor(this)" maxlength="255"> 
                    <br><br>
                    <h2 id="Tel" class="has-text-danger"></h2>
                    <h2> Telefono </h2>
                    <h2 class="has-text-danger"> *</h2>
                    <div>
                        <input  class="input"type="text" id="campo-6" name="phone" onkeyup="cambiarcolor(this); phonecheck()" maxlength="10">
                    </div>
                    
                    <input type="hidden" id="telefono" name="el1" value="">
                    <br>
                    <h2 id="pass" class="has-text-danger"></h2>
                    <h2> Contrase√±a </h2>
                    <h2 class="has-text-danger"> *</h2>
                    <input  class="input"type="password" id="campo-7" name="el1" onkeyup=" contravalido(this); cambiarcolor(this)" maxlength="255">
                    <br><br>
                    <input  class="button has-text-centered is-danger" type="submit" id="enviar" name="enviar" value="Registrar" >
                    
                </form>
            </div>  
        </div> 
        <div class="column is-4"></div> 
    </div>
</section>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script src="../js/dist/bulma-toast.min.js"></script>
    <script src="../js/registro.js"></script>
<% if(info != '') { %>
    <script>
        bulmaToast.toast({ message: '<%= info %>', type: 'is-danger', position: 'bottom-right', animate: { in: 'fadeIn', out: 'fadeOut' }})
    </script>
<% } %>
    
